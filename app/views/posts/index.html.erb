<div class="mt-4">
  <%= search_form_for(@query, url: root_path, method: :get, class:"d-flex")  do |f| %>
    <%= f.search_field :title_or_content_i_cont_any,
   placeholder: "Search...",class:"form-control me-2" %>
    <%= f.submit "Search",class:"btn btn-outline-success" %>
  <% end %>
</div>
<div class="my-5 d-flex justify-content-center">
  <div class="d-grid gap-4 col mx-auto" style="justify-items: center;">
    <span class="fw-bold fs-3" >Share your experience !</span>
    <%= link_to "Add",posts_apply_path,class: "btn btn-primary col-2" %>
  </div>
</div>
<div id="posts">
  <div class="row row-cols-2 row-cols-md-4 g-4 mt-4">
    <% @posts.each do |post| %>
      <% if post.approved != false %>
        <%= render post %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="my-5 d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>
</div>
