<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Posted by:</strong>
    <%= post.user.username %>
  </p>
  <% if post.images.attached? %>
    <% post.images.each do |image| %>
      <%= image_tag(image,height: 100)%>
    </br>
  <%end%>
<%end%>
<p>
  <strong>Content:</strong>
  <%= post.content %>
</p>
</div>
