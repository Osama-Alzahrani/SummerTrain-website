<p style="color: green"><%= notice %></p>
<%= render @post %>
<div>
  <% if current_user.admin?%>
    <div class="mt-3">
      <%= link_to "Admin Panel", admin_post_path(@post),class: "btn btn-success" %> |
      <%= link_to "Edit this post", edit_post_path(@post),class: "btn btn-warning"  %> |
      <%= link_to "Back to posts", posts_path,class:"btn btn-primary" %>
      <%= button_to "Destroy this post", @post, method: :delete,class: "btn btn-danger mt-3"%>
    </div>
  <%end%>
</div>
<div class="container">
  <% @comments.each do |comment| %>
    <% if comment.approved != false%>
      <%= render 'comments/comment',
    post: @post,
    comment: comment %>
    <%end%>
  <% end %>
</div>
<div class="my-5 d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1%>
</div>
