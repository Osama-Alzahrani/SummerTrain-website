<section class="h-100">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="text-center my-5">
          <img src="https://getbootstrap.com/docs/5.0/assets/brand/bootstrap-logo.svg" alt="logo" width="100">
        </div>
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h1 class="fs-4 card-title fw-bold mb-4"><%= t("auth.login")%></h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% if notice %>
                <p class="notice"><%= notice %></p>
              <% elsif alert %>
                <p class="alert text-danger"><%= alert %></p>
              <% end %>
              <div class="mb-3">
                <div class="field">
                  <%= f.label :email ,class: "mb-2 text-muted"%><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control",:required => true%>
                </div>
              </div>
              <div class="mb-3">
                <div class="field">
                  <%= f.label :password, class:"text-muted"%><br />
                  <%= f.password_field :password, autocomplete: "current-password",class: "form-control",:required => true %>
                </div>
              </div>
              <div class="d-flex align-items-center justify-content-between">
                <% if devise_mapping.rememberable? %>
                  <div class="form-check">
                    <%= f.check_box :remember_me ,class: "form-check-input"%>
                    <%= f.label :remember_me ,class: "form-check-label"%>
                  </div>
                <% end %>
                <%= f.submit t("auth.login"),class:"btn btn-primary" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
          <div class="card-footer py-3 border-0">
            <div class="text-center">
              <%= t("auth.ask_account")%> <%= link_to  t("auth.create_new"), new_registration_path(resource_name) %>
            </div>
          </div>
        </div>
        <div class="text-center mt-5 text-muted">
          <% if Time.now.year != 2024 %>
            Copyright &copy; 2024-<%=Time.now.year%> <!-- &mdash; -->
          <%else%>
            Copyright &copy; <%=Time.now.year%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</section>
